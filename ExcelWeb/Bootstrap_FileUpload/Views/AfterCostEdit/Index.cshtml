<script type="text/javascript">
    var cloneNode = null;
    var idx = 1;
    var oldTableId = "tb_dept1";
    var previosVendors = "";
    var tableInit = null;
    $(function () {
        $.ajax({
            // get请求地址
            url: url_p + "/AfterCostEdit/GetVendor",
            dataType: "json",
            success: function (data) {
                var optArr = [];
                for (var i = 0; i < data.length; i++) {
                    $('#ddlVendors').append("<option value=" + data[i].value + ">" + data[i].text + "</option>");
                }

                $("#ddlVendors").selectpicker({
                    noneSelectedText: '请选择'//默认显示内容
                });
                // 缺一不可
                $('#ddlVendors').selectpicker('refresh');
                $('#ddlVendors').selectpicker('render');

            }
        });

        $.ajax({
            // get请求地址
            url: url_p + "/AfterCostEdit/GetGoods",
            dataType: "json",
            success: function (data) {
                var optArr = [];
                for (var i = 0; i < data.length; i++) {
                    $('#ddlGoods').append("<option value=" + data[i].value + ">" + data[i].text + "</option>");
                }

                $("#ddlGoods").selectpicker({
                    noneSelectedText: '请选择'//默认显示内容
                });
                // 缺一不可
                $('#ddlGoods').selectpicker('refresh');
                $('#ddlGoods').selectpicker('render');

            }
        });
    });

    $("#divGoodsContainer").mousedown(function () {
        var div1 = $("#divGoodsContainer div").first();
        div1.addClass("open");
        $(".dropdown-menu").addClass("open");
        //$(".dropdown-menu").attr("style","max-height: 573px; overflow: hidden; min-height: 130px;");
    });

    $("#divVendorContainer").mousedown(function () {
        var div1 = $("#divVendorContainer div").first();
        div1.addClass("open");
        $(".dropdown-menu").addClass("open");
        //$(".dropdown-menu").attr("style","max-height: 573px; overflow: hidden; min-height: 130px;");
    });
    $("#ddlNumberFlagContainer").mousedown(function () {
        var div1 = $("#ddlNumberFlagContainer div").first();
        div1.addClass("open");
        $(".dropdown-menu").addClass("open");
        //$(".dropdown-menu").attr("style","max-height: 573px; overflow: hidden; min-height: 130px;");
    });


    $('#btnExport').on("click", function () {
        $("#errorBlock").hide();

        if (tableInit == null) return;

        var price = $("#txtPrice").val();
        if (price == "") {
            alert("价格不能为空");
            return;
        }

        var arrselectedData = tableInit.myViewModel.getSelections();
        if (arrselectedData.length < 1) {
            alert("未选择行");
            return;
        }
        //var arr = [];
        //for (var i= 0; i < arrselectedData.length;i++){
        //    var id = arrselectedData[i].ID;
        //    arr.push(id);
        //}


        $.ajax({
            url: url_p + "/AfterCostEdit/Export",
            type: "post",
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({ 'csp': arrselectedData, 'price': price }),
            //data: searchModel,
            success: function (data, status) {
                alert(data);
            },
            error: function (data, status) {
                alert(data);
            }
        });
    });

    $('#btnSearch').on("click", function () {
        $("#errorBlock").hide();
        var startDate = $("#start_date").val();
        var endDate = $("#end_date").val();
        var vendorName = $("#ddlVendors").selectpicker('val');
        var goods = $("#ddlGoods").selectpicker('val');
        if (vendorName == null || vendorName == "") {
            $("#errorSpan").html("客户不能为空");
            $("#errorBlock").show();
            return;
        };
        if (startDate == null || startDate == "") {
            $("#errorSpan").html("开始时间不能为空");
            $("#errorBlock").show();
            return;
        };
        if (endDate == null || endDate == "") {
            $("#errorSpan").html("结束时间不能为空");
            $("#errorBlock").show();
            return;
        };

        var vendorNameStr = JSON.stringify(vendorName);
        var goodsStr = JSON.stringify(goods);

        tableInit = {
            Init: function () {
                if ($("#" + oldTableId).length == 1) {
                    ko.cleanNode(document.getElementById(oldTableId));
                }
                var html = "<table class='col-lg-12' id='tb_dept" + idx.toString() + "' data-bind='myBootstrapTable:$root'>";
                html += "<thead>";
                html += "<tr>";
                html += " <th data-checkbox='true'></th>";
                html += " <th data-field='Vendor'>客户名称</th>";
                html += "<th data-field='DateStr'>日期</th>";
                html += "<th data-field='ShopNumber'>货架号</th>";
                html += "<th data-field='UnitPrice'>单价</th>";
                
                html += "</tr>";
                html += "</thead>";
                html += "</table>";

                $("#divSearchResult").empty();
                $("#divSearchResult").html(html);
                var tableId = "tb_dept" + idx;

                oldTableId = tableId;

                this.myViewModel = new ko.bootstrapTableViewModel({
                    url: url_p + '/AfterCostEdit/Search',         //请求后台的URL（*）
                    method: 'get',                      //请求方式（*）
                    toolbar: '#toolbar',                //工具按钮用哪个容器
                    queryParams: function (param) {
                        return {
                            limit: param.limit,
                            offset: param.offset,
                            VendorNameStr: vendorNameStr,
                            CarNumberList: '',
                            StartDate: startDate,
                            EndDate: endDate,
                            ShopNumberList: goodsStr,
                            SearchType: ''
                        };
                    },//传递参数（*）
                    pagination: true,                   //是否显示分页（*）
                    sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
                    pageNumber: 1,                      //初始化加载第一页，默认第一页
                    pageSize: 3000,                //每页的记录行数（*）
                    pageList: [10, 25, 50, 100]        //可供选择的每页的行数（*）
                });

                ko.applyBindings(this.myViewModel, document.getElementById(tableId));
                idx++;
            }
        };
        tableInit.Init();

    });

</script>

